---
import { twMerge as merge } from 'tailwind-merge';
import Lightbox from '@components/Lightbox.astro';

interface Props {
	class?: string;
	images: {
		src: string;
		alt: string;
	}[];
	imageClass?: string;
}

const { class: className, images, imageClass: imageClassName } = Astro.props;
---

<Lightbox
	class={merge('grid grid-cols-2 md:grid-cols-4 gap-6', className)}
	name="gallery"
	images={images}
	imageClass={imageClassName}
/>
